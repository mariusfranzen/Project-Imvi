<Window x:Class="Project_Imvi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Imvi"
        xmlns:UserControls="clr-namespace:Project_Imvi.UserControls"
        xmlns:ViewModels="clr-namespace:Project_Imvi.ViewModels"
        xmlns:Models="clr-namespace:Project_Imvi.Models"
        xmlns:ImageClasses="clr-namespace:Project_Imvi.ImageClasses"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.DataContext>
        <ViewModels:MainViewModel/>
    </Window.DataContext>

    <DockPanel Background="{Binding Source={x:Static Models:CoreModel.Instance}, Path=BackgroundColorHex}">
        <UserControls:MainMenuBar DockPanel.Dock="Top"/>

        <ImageClasses:ZoomBorder ClipToBounds="True">
            <Image Source="{Binding Image.ImageUri}"/>
        </ImageClasses:ZoomBorder>
        
    </DockPanel>
</Window>
